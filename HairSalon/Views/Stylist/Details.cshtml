@* Displays the selected Stylist and Clients under that Stylist.
Make options to edit or delete the stylist.
Something to go back to list of all stylists? *@

@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details</h2>
<hr />
<h3>Name: @Html.DisplayFor(model => model.StylistName)<h3>
<h3>Specialty: @Html.DisplayFor(model => model.StylistSpecialty)</h3>

@if (ViewBag.ClientName.Count == 0)
{
  <p>No clients yet.</p>
}
else
{
  <p>Currently servicing the following clients:</p>
  <ul>
    @foreach (Client client in ViewBag.ClientName)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", "Client", new {id = client.ClientId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to all Stylists", "Index")</p>