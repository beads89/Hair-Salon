@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Current Stylists</h1>
@if (@Model.Count == 0)
{
  <h2>Please add a stylist.</h2>
}
else
{
  <h3>Click on a stylist's name for more details.</h3>
}

<ol>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId }) | Specialty: @stylist.StylistSpecialty</li>
  }
</ol>

<p>@Html.ActionLink("Add a new Stylist", "Create")</p>
<p>@Html.ActionLink("Homepage", "Index", "Home")</p>