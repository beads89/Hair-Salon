@* Home for Stylists
Show a list of stylists and use html actionlinks to click on them to go to their details(details.cshtml) page.
Also give an option to add a new stylist(create.cshtml), or go to home page(home/index.cshtml) *@
@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Current Stylists</h1>
@if (@Model.Count == 0)
{
  <h2>Please add a stylist.</h2>
}
else
{
  <h3>Click on a stylist's name to view and edit name, specialty and current clients.</h3>
}

<ol>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
    <ul>
      <li>Specialty: @stylist.StylistSpecialty</li>
    </ul>
  }
</ol>

<p>@Html.ActionLink("Add a new stylist", "Create")</p>
<p>@Html.ActionLink("Homepage", "Index", "Home")</p>