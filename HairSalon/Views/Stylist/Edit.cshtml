@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Edit</h2>

<h4>@Html.DisplayFor(model => model.StylistName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  <span>Change Name: </span>@Html.EditorFor(model => model.StylistName)<br />

  <span>Change Specialty: </span>@Html.EditorFor(model => model.StylistSpecialty)<br />

  <input type="submit" value="Save" class="btn btn-default"/>
}
<p>@Html.ActionLink("Back to Stylists", "Index")</p>