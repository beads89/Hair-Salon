@{
  Layout = "_Layout";
}

@using HairSalon.Models;


<h1>All Clients.</h1>

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
  <ul>
    <li>Stylist: @client.Stylist.StylistName</li>
  </ul>
}

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
}

@if (@Model.StylistId <= 0)
{
  <h3>You must add a stylist before a client can be added!</h3>
}
else
{
<p>@Html.ActionLink("Add a new Client", "Create")</p>
}
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>
